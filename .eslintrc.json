{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": false,
        "jasmine": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "angular": true,
        "inject": true,
        "Promise": true
    },
    "parserOptions": {
        "ecmaVersion": 5
    },
    "plugins": [
        "angular",
        "jasmine"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}